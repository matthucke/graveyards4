= form_for @visit do |f|
  - if @visit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@visit.errors.count, "error")} prohibited this visit from being saved:"
      %ul
        - @visit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :graveyard
    = f.text_field :graveyard
  .field
    = f.label :visited_at
    = f.datetime_select :visited_at
  .field
    = f.label :visit_type
    = f.number_field :visit_type
  .field
    = f.label :notes
    = f.text_area :notes
  .actions
    = f.submit 'Save'
